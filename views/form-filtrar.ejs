<style>
#etiqueta {
    display: block;
    margin-bottom: 8px;
    padding-right: 8px;
    font-weight: bold;
  }

  
  #mes {
    background-color: #1976d2;
    color: #fff;
    font-weight: bold;
  }

  #botonbuc {
    background: #194ccd;
    color: #fff;
    padding: 6px 14px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 14px;
    transition: background 0.2s;
  }
  #botonbuc:hover {
    background: #07dce3;
  }
  #bucador {
    display: flex;
    text-align: center;
    margin: 20px auto;
    width: 90%;
  }

   table {
    border-collapse: collapse;
    width: 90%;
    margin: 20px auto;
    font-family: Arial, sans-serif;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }

  th, td {
    border: 1px solid #ddd;
    padding: 10px 16px;
    text-align: left;
  }
  th {
    background-color: #1976d2;
    color: #fff;
    font-weight: bold;
  }
  tr:nth-child(even) {
    background-color: #f5f5f5;
  }
  tr:hover {
    background-color: #e3f2fd;
  }
  a.btn-pdf {
    background: #388e3c;
    color: #fff;
    padding: 6px 14px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 14px;
    transition: background 0.2s;
  }
  a.btn-pdf:hover {
    background: #26ff05;
  }

</style>



<form id="bucador" action="/rutas/filtrar-vista" method="get">
  <label id="etiqueta" for="mes">Selecciona el mes:</label>
  <input type="month" id="mes" name="mes" required>
  <button id="botonbuc" type="submit">Buscar</button>
</form>

<% if (registros && registros.length > 0) { %>
  <table>
    <tr>
      <th>Nombre</th>
      <th>Fecha</th>
      <th>Descargar PDF</th>
    </tr>
    <% registros.forEach(r => { %>
      <tr>
        <td><%= r.nombre %></td>
        <td><%= new Date(r.fecha).toLocaleDateString('es-ES') %></td>
        <td>
          <a href="/rutas/pdf/<%= r.idformulario %>" class="btn-pdf" target="_blank">Descargar PDF</a>
        </td>
      </tr>
    <% }) %>
  </table>
<% } else if (mes) { %>
  <p>No hay registros para este mes.</p>
<% } %>