<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Seleccionar respuesta</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 600px;
      margin: auto;
      padding: 20px;
    }
    select {
      padding: 10px;
      font-size: 16px;
      width: 100%;
      margin-bottom: 20px;
    }
    .botones a {
      padding: 10px 15px;
      margin-right: 10px;
      text-decoration: none;
      color: white;
      border-radius: 5px;
    }
    .vista {
      background-color: #007bff;
    }
    .pdf {
      background-color: #28a745;
    }
    .disabled {
      pointer-events: none;
      opacity: 0.5;
    }
  </style>
</head>
<body>
  <h2>Selecciona una respuesta</h2>

  <select id="respuesta-id">
    <option value="">-- Elige una opci√≥n --</option>
    <% respuestas.forEach(r => { %>
      <option value="<%= r.id %>"><%= r.nombre %> (ID: <%= r.id %>)</option>
    <% }) %>
  </select>

  <div class="botones">
    <a id="btnVista" class="vista disabled" target="_blank">üëÅ Ver Vista Previa</a>
    <a id="btnPDF" class="pdf disabled" target="_blank">üìÑ Descargar PDF</a>
  </div>

<script>
  const select = document.getElementById('respuesta-id');
  const btnVista = document.getElementById('btnVista');
  const btnPDF = document.getElementById('btnPDF');

  select.addEventListener('change', () => {
    const id = select.value;

    if (id) {
      btnVista.href = `/vista/${id}`;
      btnPDF.href =  `/pdf/${id}`;
      btnVista.classList.remove('disabled');
      btnPDF.classList.remove('disabled');
    } else {
      btnVista.href = '#';
      btnPDF.href = '#';
      btnVista.classList.add('disabled');
      btnPDF.classList.add('disabled');
    }
  });
</script>
</body>
</html>
